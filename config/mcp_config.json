{
  "server": {
    "name": "faulkner-db",
    "version": "0.1.0",
    "description": "Temporal knowledge graph system with MCP server for architectural memory"
  },
  "tools": {
    "add_decision": {
      "enabled": true,
      "description": "Record architectural decision with rationale",
      "schema": {
        "description": {"type": "string", "min_length": 10, "max_length": 1000},
        "rationale": {"type": "string", "min_length": 20, "max_length": 2000},
        "alternatives": {"type": "array", "items": "string"},
        "related_to": {"type": "array", "items": "string"}
      }
    },
    "query_decisions": {
      "enabled": true,
      "description": "Hybrid search for decisions by topic/timeframe",
      "max_results": 15,
      "timeout_seconds": 2.0
    },
    "add_pattern": {
      "enabled": true,
      "description": "Store successful implementation pattern"
    },
    "add_failure": {
      "enabled": true,
      "description": "Document what didn't work and why"
    },
    "find_related": {
      "enabled": true,
      "description": "Graph traversal for related knowledge",
      "max_depth": 3
    },
    "detect_gaps": {
      "enabled": true,
      "description": "Run NetworkX analysis, return structural gaps",
      "min_accuracy": 0.85
    },
    "get_timeline": {
      "enabled": true,
      "description": "Temporal view of knowledge evolution"
    }
  },
  "monitoring": {
    "enabled": true,
    "metrics_endpoint": "/metrics",
    "track_tool_usage": true,
    "track_errors": true,
    "track_response_times": true
  },
  "hybrid_search": {
    "embedding_model": "all-MiniLM-L6-v2",
    "reranker_model": "cross-encoder/ms-marco-MiniLM-L-6-v2",
    "max_results": 50,
    "rerank_top_k": 15,
    "target_latency_seconds": 2.0,
    "target_accuracy": 0.90
  },
  "gap_detection": {
    "betweenness_threshold": 0.1,
    "min_cluster_size": 2,
    "modularity_resolution": 1.0,
    "similarity_threshold": 0.7
  }
}
